<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="93dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/ruchnoy_fon"
        android:orientation="vertical"
        tools:context=".admin.MainActivity">


    <EditText
        android:id="@+id/login_vvod"
        android:layout_width="300sp"
        android:layout_height="88sp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:lines="1"
        android:background="@drawable/registr_style"
        android:hint="@string/login"
        android:textColorHint="#ffffff"
        android:shadowColor="#A80000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="InOrMmUsage" />


    <EditText
        android:id="@+id/pass_vvod"
        android:layout_width="300sp"
        android:layout_height="88sp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:lines="1"
        android:background="@drawable/registr_style"
        android:textColorHint="#ffffff"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:shadowColor="#A80000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="InOrMmUsage" />

    <Button
        android:id="@+id/lg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/pass_vvod"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:background="@drawable/registr_button"
        android:drawableLeft="@drawable/zamok"
        android:radius="100dp"
        android:shadowColor="#A80000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="InOrMmUsage" />

</LinearLayout>
